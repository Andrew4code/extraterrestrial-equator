---
import ThemeIcon from './ThemeIcon.astro';
---


<header class="navbar bg-base-100 flex justify-between items-center p-4">
  <div class="flex items-center">
    <a href="#" class="btn btn-ghost text-xl">daisyUI</a>
    <label class="swap swap-rotate inline-flex items-center ml-4">
      <!-- this hidden checkbox controls the state -->
      <input type="checkbox" class="theme-controller" value="synthwave" />

      <!-- sun icon -->
      <svg class="swap-on fill-current w-10 h-10" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <!-- Sun icon SVG content -->
      </svg>

      <!-- moon icon -->
      <svg class="swap-off fill-current w-10 h-10" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <!-- Moon icon SVG content -->
      </svg>
    </label>
  </div>

  <div class="flex items-center">
    <div class="form-control">
      <input type="text" placeholder="Search" class="input input-bordered w-24 md:w-auto" />
    </div>
    <div class="dropdown dropdown-end">
      <button tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
        <div class="w-10 h-10 rounded-full overflow-hidden">
          <img alt="User Avatar" src="https://daisyui.com/impublic\images\imag_astro.jpg">
        </div>
      </button>
      <ul tabindex="0" class="mt-3 z-10 p-2 shadow menu menu-sm dropdown-content bg-base-100 rounded-box w-52">
        <li>
          <a class="flex items-center justify-between">
            Profile
            <span class="badge bg-primary">New</span>
          </a>
        </li>
        <li><a href="C:\Users\Andrei\extraterrestrial-equator\src\pages\settings.astro">Settings</a></li>
        <li><a href="#">Logout</a></li>
      </ul>
    </div>
  </div>
</header>
